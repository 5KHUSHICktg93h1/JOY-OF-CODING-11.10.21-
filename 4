# JOY-OF-CODING-11.10.21-
#include<stdio.h> int main()
{
int i,p;
float b[10],l;
printf("Enter daily wages:\n"); for(i=0;i<6;i++) scanf("%f",&b[i]);
l=b[0];
for(i=1;i<6;i++)
{
if(b[i]>l) {
l=b[i]; p=i;
} }
switch(p+1) {
case 1: {
printf("Highest pay is on Monday and the pay is Rs.%.2f",l);
break; }
case 2: {
printf("Highest pay is on Tuesday and the pay is Rs.%.2f",l); break;
}
case 3: {
printf("Highest pay is on Wednesday and the pay is Rs.%.2f",l);
break; }
case 4: {
printf("Highest pay is on Thusday and the pay is Rs.%.2f",l);
break; }
case 5: {
printf("Highest pay is on Friday and the pay is Rs.%.2f",l);
break; }
case 6: {
printf("Highest pay is on Saturday and the pay is Rs.%.2f",l);
break; }
default: {
printf("Invalid input");
break; }
}
return 0;
}
